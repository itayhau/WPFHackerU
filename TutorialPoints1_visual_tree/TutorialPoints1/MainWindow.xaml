        xmlns:local="clr-namespace:TutorialPoints1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button x:Name="button" Height="30" Width="70" Content="OK"
                        Margin="20"/>
